{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@fonts/*": ["fonts/*"],
      "@pages/*": ["pages/*"],
      "@utilities/*": ["utilities/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}